<%if @name%>
  <h1>Roll the dice, <%= @name %></h1>
  <p>
    <img src="/images/dice/<%= @die1 %>.svg">
    <img src="/images/dice/<%= @die2 %>.svg">
  </p>
  <p>
    The total is <%= @total %>
  </p>
  <p>
    <a href="/dice?username= <%= @name%>">Roll Again</a>
  </p>
<%else%>
  <h1>What is your name?</h1>
  <form action="/dice" >
    <input type="text" name= "username">
    <button>Let's Play!</button>
  </form>
<%end%>